<!doctype html>
<html lang="en">
  <head>
    {% include "head.njk" %}{%- if customjs -%}
    <script>
      {% include customjs -%}
    </script>
    {%- endif %}
  </head>
  <body>
    {% include "nav.njk" %}

    <div class="container mt-4">
      {% if not hide_title -%}
      <h1>{{title}}</h1>
      <p>{{description}}</p>
      <hr />
      {%- endif %}
      <main>{% block content -%} {{ content | safe }} {%- endblock -%}</main>
    </div>

    {%- include "body-bottom.njk" -%}
  </body>
</html>
